{
  "name": "shooty",
  "version": "1.0.0",
  "description": "Shooty - Multiplayer Physics Shooter",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder --win --mac --linux"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.shooty.game",
    "productName": "Shooty",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "game.html",
      "js/**/*",
      "css/**/*",
      "models/**/*",
      "sounds/**/*",
      "textures/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Game"
    }
  }
}
